<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.addnote.AddNoteActivity"
    android:padding="40dp">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/activity_addNote_editText_title"
        android:hint="@string/placeholder_insert_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:hint="@string/placeholder_insert_description"
        android:gravity="top"
        android:id="@+id/activity_addNote_editText_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_addNote_editText_title"/>

    <dev.tonivecina.cleanarchitecture.views.buttons.AddButton
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/action_apply_note"
        android:textAllCaps="false"
        android:id="@+id/activity_addNote_button_apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
